@model Order

<form asp-action="Checkout" method="post">
    <h3 class="my-5">
        You're just one step away from your delicious pies.
    </h3>


    <div class="col-6">
        <div class="row g-2">
            <div class="col-12">
                <label asp-for="Customer" class="form-label">Customer Name</label>
                <input asp-for="Customer" class="form-control" />
            </div>
            <div class="col-12">
                <label asp-for="Note" class="form-label"></label>
                <input asp-for="Note" class="form-control" />
            </div>
        </div>
        <div class="mt-2">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-secondary" value="Complete order" />
            </div>
        </div>
    </div>
</form>